@model CouponDto
@{
    ViewData["Title"] = "შეძენა წარმატებულია!";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Success Message -->
            <div class="text-center mb-4">
                <div class="success-animation">
                    <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
                </div>
                <h1 class="mt-3 text-success">შეძენა წარმატებულია!</h1>
                <p class="lead">თქვენი კუპონი მზადაა გამოსაყენებლად</p>
            </div>

            <!-- Coupon Card -->
            <div class="card shadow-lg mb-4">
                <div class="card-header bg-success text-white text-center">
                    <h4 class="mb-0">თქვენი კუპონი</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center">
                            @if (!string.IsNullOrEmpty(Model.DiscountImageUrl))
                            {
                                <img src="@Model.DiscountImageUrl" class="img-fluid rounded mb-3" alt="@Model.DiscountTitle">
                            }
                            <div class="coupon-code-box p-3 bg-light rounded">
                                <small class="text-muted d-block">კუპონის კოდი</small>
                                <h3 class="mb-0 font-monospace">@Model.Code</h3>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <h4>@Model.DiscountTitle</h4>
                            <p class="text-muted">
                                <i class="fas fa-building"></i> @Model.MerchantName
                            </p>

                            <hr />

                            <dl class="row">
                                <dt class="col-sm-4">ორიგინალური ფასი:</dt>
                                <dd class="col-sm-8"><del>@Model.OriginalPrice.ToString("C")</del></dd>

                                <dt class="col-sm-4">გადახდილი:</dt>
                                <dd class="col-sm-8"><strong>@Model.DiscountedPrice.ToString("C")</strong></dd>

                                <dt class="col-sm-4">დაზოგვა:</dt>
                                <dd class="col-sm-8 text-success">
                                    <strong>@((Model.OriginalPrice - Model.DiscountedPrice).ToString("C")) (-@Model.DiscountPercentage%)</strong>
                                </dd>

                                <dt class="col-sm-4">შეძენის თარიღი:</dt>
                                <dd class="col-sm-8">@Model.PurchasedAt?.ToString("dd/MM/yyyy HH:mm")</dd>

                                <dt class="col-sm-4">ვალიდურია:</dt>
                                <dd class="col-sm-8">
                                    @Model.ValidFrom.ToString("dd/MM/yyyy") - @Model.ValidTo.ToString("dd/MM/yyyy")
                                </dd>
                            </dl>

                            <div class="alert alert-warning mt-3">
                                <i class="fas fa-exclamation-triangle"></i>
                                <strong>მნიშვნელოვანი:</strong> კუპონის კოდი შეინახეთ უსაფრთხოდ. 
                                აჩვენეთ ის მერჩანტს გამოყენებისას.
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="row">
                <div class="col-md-4">
                    <a asp-action="Index" class="btn btn-outline-primary w-100 mb-2">
                        <i class="fas fa-tags"></i> მეტი ფასდაკლება
                    </a>
                </div>
                <div class="col-md-4">
                    <a asp-action="MyCoupons" class="btn btn-primary w-100 mb-2">
                        <i class="fas fa-ticket-alt"></i> ჩემი კუპონები
                    </a>
                </div>
                <div class="col-md-4">
                    <a asp-action="CouponDetails" asp-route-id="@Model.Id" 
                       class="btn btn-outline-secondary w-100 mb-2">
                        <i class="fas fa-info-circle"></i> კუპონის დეტალები
                    </a>
                </div>
            </div>

            <!-- How to Use -->
            <div class="card mt-4">
                <div class="card-header">
                    <h5><i class="fas fa-question-circle"></i> როგორ გამოვიყენო?</h5>
                </div>
                <div class="card-body">
                    <ol>
                        <li>ეწვიეთ მერჩანტის ლოკაციას ან ვებსაიტს</li>
                        <li>აჩვენეთ კუპონის კოდი: <code>@Model.Code</code></li>
                        <li>მიიღეთ ფასდაკლება</li>
                        <li>კუპონი ავტომატურად მონიშნავს როგორც გამოყენებული</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .success-animation {
            animation: scaleIn 0.5s ease-in-out;
        }

        @@keyframes scaleIn {
            0% {
                transform: scale(0);
            }
            50% {
                transform: scale(1.2);
            }
            100% {
                transform: scale(1);
            }
        }

        .coupon-code-box {
            border: 2px dashed #28a745;
        }
    </style>
}
