@model LoginViewModel
@{
    ViewData["Title"] = L["Auth_Login"].Value;
    var returnUrl = ViewData["ReturnUrl"] as string;
}

<div class="auth-card">
    <div class="card shadow">
        <div class="card-header bg-primary text-white text-center py-3">
            <h4 class="mb-0"><i class="fas fa-sign-in-alt"></i> @L["Auth_Login"]</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="Login" method="post">
                <input type="hidden" name="returnUrl" value="@returnUrl" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">
                        <i class="fas fa-envelope"></i> @L["Auth_Email"]
                    </label>
                    <input asp-for="Email" type="email" class="form-control form-control-lg"
                           placeholder="your@email.com" autofocus />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">
                        <i class="fas fa-lock"></i> @L["Auth_Password"]
                    </label>
                    <input asp-for="Password" type="password" class="form-control form-control-lg"
                           placeholder="••••••••" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">@L["Auth_RememberMe"]</label>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-sign-in-alt"></i> @L["Auth_Login"]
                    </button>
                </div>
            </form>

            <hr />

            <div class="text-center">
                <p class="mb-1">@L["Auth_NoAccount"]</p>
                <div class="d-flex gap-2 justify-content-center">
                    <a asp-action="Register" asp-route-role="Customer" class="btn btn-outline-success">
                        <i class="fas fa-user"></i> @L["Auth_Customer"]
                    </a>
                    <a asp-action="Register" asp-route-role="Merchant" class="btn btn-outline-primary">
                        <i class="fas fa-building"></i> @L["Auth_Merchant"]
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
