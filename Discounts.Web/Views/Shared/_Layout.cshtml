@using Microsoft.AspNetCore.Localization
@{
    var cultureFeature = Context.Features.Get<IRequestCultureFeature>();
    var currentLang = cultureFeature?.RequestCulture.UICulture.Name ?? "ka";
}
<!DOCTYPE html>
<html lang="@currentLang">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Discounts.ge</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
          integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Discounts.Web.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="Customer" asp-action="Index">
                    <i class="fas fa-percent"></i> Discounts.ge
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <!-- Left navigation -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Customer" asp-action="Index">
                                <i class="fas fa-tags"></i> @L["Nav_Discounts"]
                            </a>
                        </li>

                        @if (User.IsInRole("Customer"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Customer" asp-action="MyCoupons">
                                    <i class="fas fa-ticket-alt"></i> @L["Nav_MyCoupons"]
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Merchant"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Merchant" asp-action="Index">
                                    <i class="fas fa-tachometer-alt"></i> @L["Nav_Dashboard"]
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Merchant" asp-action="MyDiscounts">
                                    <i class="fas fa-list"></i> @L["Nav_MyDiscounts"]
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Merchant" asp-action="CreateDiscount">
                                    <i class="fas fa-plus-circle"></i> @L["Nav_New"]
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Administrator"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-shield-alt"></i> @L["Nav_Administration"]
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Index">
                                            <i class="fas fa-tachometer-alt"></i> @L["Nav_Dashboard"]
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Moderation">
                                            <i class="fas fa-clipboard-check"></i> @L["Nav_Moderation"]
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Users">
                                            <i class="fas fa-users"></i> @L["Nav_Users"]
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Categories">
                                            <i class="fas fa-th-list"></i> @L["Nav_Categories"]
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Settings">
                                            <i class="fas fa-cog"></i> @L["Nav_Settings"]
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <!-- Right navigation — auth + language -->
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <partial name="_CultureSwitcher" />

                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-circle"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end">
                                    @if (User.IsInRole("Customer"))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Customer" asp-action="MyCoupons">
                                                <i class="fas fa-ticket-alt"></i> @L["Nav_MyCoupons"]
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider" /></li>
                                    }
                                    @if (User.IsInRole("Merchant"))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Merchant" asp-action="Index">
                                                <i class="fas fa-tachometer-alt"></i> @L["Nav_MyPanel"]
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider" /></li>
                                    }
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="fas fa-sign-out-alt"></i> @L["Nav_Logout"]
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i> @L["Nav_Login"]
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-light btn-sm ms-2 mt-1" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus"></i> @L["Nav_Register"]
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3 mt-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark text-white-50">
        <div class="container d-flex justify-content-between align-items-center">
            <span>&copy; 2026 Discounts.ge</span>
            <span>
                <a class="text-white-50 text-decoration-none" asp-controller="Home" asp-action="Privacy">
                    @L["Nav_Privacy"]
                </a>
            </span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
