@model CreateCategoryDto
@{
    ViewData["Title"] = "ახალი კატეგორია";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="fas fa-plus-circle"></i> ახალი კატეგორიის შექმნა</h2>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Categories" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> უკან
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="CreateCategory" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">სახელი *</label>
                            <input asp-for="Name" class="form-control" placeholder="მაგ: რესტორნები" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">აღწერა</label>
                            <textarea asp-for="Description" class="form-control" rows="3" 
                                      placeholder="კატეგორიის მოკლე აღწერა..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IconClass" class="form-label">Icon Class</label>
                            <input asp-for="IconClass" class="form-control" 
                                   placeholder="მაგ: fas fa-utensils" />
                            <span asp-validation-for="IconClass" class="text-danger"></span>
                            <small class="form-text text-muted">
                                FontAwesome icon class. იხილეთ: 
                                <a href="https://fontawesome.com/icons" target="_blank">fontawesome.com/icons</a>
                            </small>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Categories" class="btn btn-secondary">გაუქმება</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> შენახვა
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h6>პოპულარული Icons</h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li><i class="fas fa-utensils"></i> fas fa-utensils (რესტორნები)</li>
                        <li><i class="fas fa-plane"></i> fas fa-plane (ტურიზმი)</li>
                        <li><i class="fas fa-shopping-bag"></i> fas fa-shopping-bag (შოპინგი)</li>
                        <li><i class="fas fa-spa"></i> fas fa-spa (სილამაზე)</li>
                        <li><i class="fas fa-dumbbell"></i> fas fa-dumbbell (სპორტი)</li>
                        <li><i class="fas fa-graduation-cap"></i> fas fa-graduation-cap (განათლება)</li>
                        <li><i class="fas fa-film"></i> fas fa-film (გართობა)</li>
                        <li><i class="fas fa-laptop"></i> fas fa-laptop (ტექნოლოგია)</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
