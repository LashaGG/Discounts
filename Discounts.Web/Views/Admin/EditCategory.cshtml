@model UpdateCategoryDto
@{
    ViewData["Title"] = "კატეგორიის რედაქტირება";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="fas fa-edit"></i> კატეგორიის რედაქტირება</h2>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Categories" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> უკან
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="EditCategory" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">სახელი *</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">აღწერა</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IconClass" class="form-label">Icon Class</label>
                            <input asp-for="IconClass" class="form-control" />
                            <span asp-validation-for="IconClass" class="text-danger"></span>
                            <small class="form-text text-muted">
                                FontAwesome icon class
                            </small>
                        </div>

                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" />
                                <label asp-for="IsActive" class="form-check-label">აქტიური</label>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Categories" class="btn btn-secondary">გაუქმება</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> შენახვა
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.IconClass))
            {
                <div class="card">
                    <div class="card-header">
                        <h6>მიმდინარე Icon</h6>
                    </div>
                    <div class="card-body text-center">
                        <i class="@Model.IconClass" style="font-size: 4rem;"></i>
                        <p class="mt-3">@Model.IconClass</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
